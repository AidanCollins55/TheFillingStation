@{
    ViewData["Title"] = "Menu";
}

<div class="container py-5 menu-page">
    <div class="text-center mb-3">
        <h1 class="display-6 fw-bold mb-2">Menu</h1>
        <p class="text-muted mb-0">Tap the menu to open it full-size.</p>
    </div>

    <!-- Kitchen hours callout -->
    <div class="row justify-content-center mb-4">
        <div class="col-lg-9 col-xl-8">
            <div class="card border-0 shadow-sm menu-hours">
                <div class="card-body p-3 p-md-4 text-center">
                    <div class="fw-semibold mb-1">Kitchen Hours</div>
                    <div class="text-muted">
                        Thursday – Monday • 3:00 PM – 9:00 PM
                        <span class="d-block small mt-1">Kitchen closed Tuesdays and Wednesdays</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-center gap-2 mb-4 flex-wrap">
        <a class="btn btn-outline-dark"
           href="/menu/MENU%202025.pdf"
           download>
            Download Menu (PDF)
        </a>

        <button type="button" class="btn btn-dark" onclick="window.print()">
            Print Menu
        </button>
    </div>

    <!-- Menu pages -->
    <div class="row g-3">
        <div class="col-12 col-lg-6">
            <a href="/menu/menu-1.jpg" target="_blank" rel="noopener" class="menu-link">
                <div class="card border-0 shadow-sm menu-card">
                    <img src="/menu/menu-1.jpg" class="menu-img" alt="The Filling Station Menu - Page 1" />
                </div>
            </a>
        </div>

        <div class="col-12 col-lg-6">
            <a href="/menu/menu-2.jpg" target="_blank" rel="noopener" class="menu-link">
                <div class="card border-0 shadow-sm menu-card">
                    <img src="/menu/menu-2.jpg" class="menu-img" alt="The Filling Station Menu - Page 2" />
                </div>
            </a>
        </div>
    </div>
</div>

