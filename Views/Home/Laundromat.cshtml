@{
    ViewData["Title"] = "Laundromat";
}

<div class="laundry-page container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-8">

            <div class="text-center mb-4">
                <h1 class="display-6 fw-bold mb-2">Laundromat</h1>
                <p class="text-muted mb-0">
                    Clean, convenient, and open every day of the year.
                </p>
            </div>

            <div class="card border-0 shadow-sm laundry-card mb-4">
                <div class="card-body p-4 p-md-5">
                    <p class="mb-3">
                        Our on-site laundromat offers reliable washers and dryers, making it easy
                        to take care of laundry while you relax, grab a bite, or run errands.
                    </p>

                    <p class="mb-3">
                        We also offer <strong>showers</strong>, providing added convenience for
                        travelers, locals, and anyone needing a refresh.
                    </p>

                    <p class="mb-0">
                        Whether you’re stopping in for a quick load or taking advantage of everything
                        The Filling Station has to offer, our laundromat is here to make your day easier.
                    </p>
                </div>
            </div>

            <div class="d-flex flex-wrap justify-content-center gap-2 mb-4">
                <div class="pill laundry-pill">
                    🧺 <span>Washers & Dryers</span>
                </div>

                <div class="pill laundry-pill">
                    🚿 <span>Showers Available</span>
                </div>

                <div class="pill laundry-pill">
                    ⏰ <span>Open Daily</span>
                </div>
            </div>


            <div class="row g-3">
                <div class="col-md-6">
                    <div class="laundry-soft p-3 text-center h-100">
                        <div class="fw-semibold mb-1">Hours</div>
                        <div class="text-muted">
                            Daily • 8:00 AM – 10:00 PM<br />
                            <span class="small">Open 365 days a year</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="laundry-soft p-3 text-center h-100">
                        <div class="fw-semibold mb-1">Amenities</div>
                        <div class="text-muted">
                            Washers &amp; Dryers<br />
                            Showers Available
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
