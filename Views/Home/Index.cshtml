@{
    ViewData["Title"] = "Home";
}

<div class="container">

    <!-- HERO -->
    <section class="section pt-3">
        <div class="card-fs p-4 p-lg-5">
            <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-4">

                <div>
                    <div class="d-flex flex-wrap gap-2 mb-3">
                        <span class="pill">Food</span>
                        <span class="pill">Drinks</span>
                        <span class="pill">Games</span>
                        <span class="pill">Good times</span>
                    </div>

                    <h1 class="section-title mb-2">
                        The Filling Station
                    </h1>

                    <p class="section-sub mb-4">
                        Your local spot for great food, cold drinks, and events worth showing up for.
                        Check the menu, see what’s happening this week, or learn more about us.
                    </p>

                    <div class="d-flex flex-wrap gap-2">
                        <a class="btn btn-fs" asp-controller="Home" asp-action="Menu">View Menu</a>
                        <a class="btn btn-fs" asp-controller="Home" asp-action="Events">See Events</a>
                    </div>
                </div>

                <!-- Optional image/graphic area (kept simple + safe) -->
                <div class="w-100" style="max-width: 420px;">
                    <div class="card-fs p-4 h-100">
                        <div class="mb-2" style="font-weight: 900; letter-spacing: 0.2px;">
                            Today’s vibe
                        </div>
                        <div class="section-sub mb-3">
                            Pull up for food + drinks, then stay for games and the night’s event.
                        </div>

                        <div class="d-flex flex-column gap-2">
                            <div class="d-flex align-items-center justify-content-between">
                                <span class="pill">🍔 Kitchen</span>
                                <span class="section-sub">Open 3pm - 9pm</span>
                            </div>
                            <div class="d-flex align-items-center justify-content-between">
                                <span class="pill">🍻 Bar</span>
                                <span class="section-sub">Open 10am - 12am </span>
                            </div>
                            <div class="d-flex align-items-center justify-content-between">
                                <span class="pill">🎯 Games</span>
                                <span class="section-sub">Pool and Keno</span>
                            </div>
                        </div>

                        <div class="mt-3">
                            <a class="btn btn-fs w-100" asp-controller="Home" asp-action="About">
                                Learn about us
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- FEATURE CARDS -->
    <section class="section">
        <div class="d-flex align-items-end justify-content-between flex-wrap gap-3 mb-3">
            <div>
                <div class="section-title" style="font-size: clamp(1.25rem, 1.8vw, 1.75rem);">
                    Explore
                </div>
                <div class="section-sub">
                    Quick links to the stuff people actually want.
                </div>
            </div>
        </div>

        <div class="row g-3">
            <!-- MENU -->
            <div class="col-12 col-md-4">
                <a asp-controller="Home" asp-action="Menu" class="text-decoration-none">
                    <div class="card-fs p-4 h-100">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="pill">🍽️ Menu</div>
                            <div class="pill">Browse</div>
                        </div>

                        <div style="font-weight: 900; font-size: 1.2rem; letter-spacing: 0.2px;">
                            Food & Drinks
                        </div>
                        <div class="section-sub mt-2">
                            See what’s cooking, what’s on tap, and your go-to favorites.
                        </div>

                        <div class="mt-3 d-flex align-items-center gap-2">
                            <span class="pill">Burgers</span>
                            <span class="pill">Appetizers</span>
                            <span class="pill">Cocktails</span>
                        </div>

                        <div class="mt-4">
                            <span class="btn btn-fs w-100">View Menu</span>
                        </div>
                    </div>
                </a>
            </div>

            <!-- EVENTS -->
            <div class="col-12 col-md-4">
                <a asp-controller="Home" asp-action="Events" class="text-decoration-none">
                    <div class="card-fs p-4 h-100">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="pill">📅 Events</div>
                            <div class="pill">Weekly</div>
                        </div>

                        <div style="font-weight: 900; font-size: 1.2rem; letter-spacing: 0.2px;">
                            What’s Happening
                        </div>
                        <div class="section-sub mt-2">
                            Specials, live nights, and anything worth showing up for.
                        </div>

                        <div class="mt-3 d-flex align-items-center gap-2">
                            <span class="pill">Live</span>
                            <span class="pill">Specials</span>
                            <span class="pill">Tournaments</span>
                        </div>

                        <div class="mt-4">
                            <span class="btn btn-fs w-100">See Events</span>
                        </div>
                    </div>
                </a>
            </div>

            <!-- ABOUT -->
            <div class="col-12 col-md-4">
                <a asp-controller="Home" asp-action="About" class="text-decoration-none">
                    <div class="card-fs p-4 h-100">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="pill">ℹ️ About</div>
                            <div class="pill">Our Story</div>
                        </div>

                        <div style="font-weight: 900; font-size: 1.2rem; letter-spacing: 0.2px;">
                            The Place
                        </div>
                        <div class="section-sub mt-2">
                            Get a feel for the vibe, what we offer, and why people keep coming back.
                        </div>

                        <div class="mt-3 d-flex align-items-center gap-2">
                            <span class="pill">Community</span>
                            <span class="pill">Comfort</span>
                            <span class="pill">Local</span>
                        </div>

                        <div class="mt-4">
                            <span class="btn btn-fs w-100">Read More</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>

</div>
